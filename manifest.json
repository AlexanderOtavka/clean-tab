{
  "manifest_version": 2,

  "name": "Square Tab",
  "description": "A clean, minimalistic new tab page.",
  "version": "1.0",

  "chrome_url_overrides": {
    "newtab": "views/newtab.html"
  },

  "permissions": [
    "bookmarks",
    "storage",
    "https://source.unsplash.com/",
    "chrome://favicon/",
    "geolocation"
  ],

  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Square Tab",
    "default_popup": "views/popup.html"
  },

  "background": {
    "scripts": ["scripts/eventPage.js"],
    "persistent": false
  }
}
