{
  "manifest_version": 2,

  "name": "Square Tab",
  "description": "A minimalistic yet functional new tab page.",
  "version": "1.9",
  "icons": {
    "16": "public/images/icon16.png",
    "48": "public/images/icon48.png",
    "128": "public/images/icon128.png",
    "512": "public/images/icon512.png"
  },

  "permissions": ["bookmarks", "storage", "chrome://favicon/", "geolocation"],

  "chrome_url_overrides": {
    "newtab": "dist/newtab/index.html"
  },

  "browser_action": {
    "default_icon": {
      "19": "public/images/icon19.png",
      "38": "public/images/icon38.png"
    },
    "default_title": "Square Tab",
    "default_popup": "dist/popup/index.html"
  },

  "background": {
    "page": "dist/background/index.html",
    "persistent": false
  }
}
